<%= render 'shared/errors', object: @category %>

<%= form_with model: category do |f| %>
  <div class="mb-3 row">
    <div class="col-sm2 col-form-label">
      <%= f.label :title %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
    </div>
  </div> 
  
  <%= f.submit "Submit category!", class: 'btn btn-primary btn-sm' %>
  <%= link_to 'Back', categories_path, class: 'btn btn-secondary btn-sm' %>
<% end %>
