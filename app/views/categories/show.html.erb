<% provide :page_title, 'Category' %>
<% curently_at 'Category' %>

<h1 class="mb-4"><%= @category.title %></h1>

<%= link_to 'Show', category_path(@category.id), class: 'btn btn-primary btn-sm' %> |
<%= link_to 'Edit', edit_category_path(@category.id), class: 'btn btn-secondary btn-sm' %> |
<%= link_to 'Delete', category_path(@category.id), class: 'btn btn-danger btn-sm', data: {method: :delete, confirm: 'Are you sure?'} %>

<hr class="my-3">

<h3>New service</h3>

<%= render 'services/form'%>

<h2 class="mt-5">Services</h2>

<hr class="my-3">

<% @services.each do |service| %>
  <article class="card mb-3">
    <div class="card-body">
      <h5 class="mt-2 mb-3">
        <%= service.title %>
      </h5>

      <p class="mt-2 mb-3">
        <%= service.description %>
      </p>

      <h5 class="mt-2 mb-3">
        Цена <%= service.cost %> руб.
      </h5>

      <%= link_to 'Edit', edit_category_service_path(@category, service), class: 'btn btn-info btn-sm' %>
      <%= link_to 'Delete', category_service_path(@category, service), class: 'btn btn-danger btn-sm', data: {method: :delete, confirm: 'Are you sure?'} %>

      <%= button_to 'Add to Cart', line_items_path(service_id: service.id), remote: true %>
    </div>
  </article>
<% end %>
